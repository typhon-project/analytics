entity Review{
	id : string 
	content : string
	product -> Product[1]
}


entity Product{
	id : string
	name : string
	description : string
	
	orders -> OrderProduct[0..*]
	review :-> Review."Review.product"[0..*]
}

entity OrderProduct{
	id : string
	product_date : string
	totalAmount : int
	
	products -> Product.products[0..*]
	users -> User."User.orders"[1]
	paidWith -> CreditCard[1]
}

entity User{
	id : string
	name : string
	
	comments :-> Comment[0..*]
	paymentsDetails :-> CreditCard[0..*]
	orders -> OrderProduct[0..*]
}

entity Comment{
	id : string
	content : string
	
	responses :-> Comment[0..*]
}

entity CreditCard{
	id : string
	number : string
	expiryDate : string
} 

relationaldb RelationalDatabase{
	tables{
		table {
			OrderDB : OrderProduct
			index orderIndex {
				attributes ("OrderProduct.id")
			}
			idSpec ("OrderProduct.id")
		}
		table {
			UserDB : User
			index  userIndex{
				attributes ('User.name')
				}
			idSpec ('User.name')
		}
		table {
			ProductDB : Product
			index productIndex{
				attributes ('Product.name')
			}
			idSpec ('Product.name')
		}
		table {
			CreditCardDB : CreditCard
			index creditCardIndex{
				attributes ("CreditCard.number")
			}
			idSpec ("CreditCard.number")
		}
	}
}

documentdb DocumentDatabase{
	collections{
			CommentsDB : Comment
			ReviewDB : Review
	}
}