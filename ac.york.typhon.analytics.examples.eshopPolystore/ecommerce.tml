datatype String
datatype int
datatype Real
datatype Blob
datatype natural_language

entity Review{
	id : String 
	content : String
	product -> Product[1]
}


entity Product{
	id : String
	name : String
	description : String
	
	orders -> OrderProduct[0..*]
	review:->Review."Review.product"[0..*]
}

entity OrderProduct{
	id : String
	product_date : String
	totalAmount : int
	
	products -> Product.products[0..*]
	users -> User."User.orders"[1]
	paidWith -> CreditCard[1]
}

entity User{
	id : String
	name : String
	
	comments :-> Comment[0..*]
	paymentsDetails :-> CreditCard[0..*]
	orders -> OrderProduct[0..*]
}

entity Comment{
	id : String
	content : String
	
	responses :-> Comment[0..*]
}

entity CreditCard{
	id : String
	number : String
	expiryDate : String
} 

relationaldb RelationalDatabase{
	tables{
		table {
			OrderDB : OrderProduct
			index orderIndex {
				attributes ("OrderProduct.id")
			}
			idSpec ("OrderProduct.id")
		}
		table {
			UserDB : User
			index  userIndex{
				attributes ('User.name')
				}
			idSpec ('User.name')
		}
		table {
			ProductDB : Product
			index productIndex{
				attributes ('Product.name')
			}
			idSpec ('Product.name')
		}
		table {
			CreditCardDB : CreditCard
			index creditCardIndex{
				attributes ("CreditCard.number")
			}
			idSpec ("CreditCard.number")
		}
	}
}

documentdb DocumentDatabase{
	collections{
			CommentsDB : Comment
			ReviewDB : Review
	}
}